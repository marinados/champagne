</head>
<body class="bg-mobile">
  <div class="<%=changing_bg%>" id="bg" ></div>
  <div class="cover"></div>
  <div class="settings">
    <%= render 'layouts/header' %>
    <div id="wrapper-mobile">
      <%= yield %>
    </div>
      <%= render 'layouts/navbar' %>

  </div>
</body>
</html>
