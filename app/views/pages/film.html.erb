<div class="modal show" id="film" tabindex="-1" role="dialog" aria-labelledby="film">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <%= video_tag 'presentation_large.mp4', autoplay: true, controls: true, id: 'video' %>
        <div>
          <%= button_to root_path, class: 'close', method: :get do %>
            <span aria-hidden="true">Passer l'introduction</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
playVideo();
function playVideo(){
    var video = document.getElementById('video');
    video.play();
    video.addEventListener('ended',function(){
        window.location = '<%= "#{root_path}" %>';
    });
}

</script>
