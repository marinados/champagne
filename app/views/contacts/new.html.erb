<div id="contact">

  <%= form_for @contact do |f| %>
    <ol>
      <li><%= f.label :subject, "#{t('subject')}" %></li>
      <li><%= f.text_field :subject, required: true, class: 'grey' %></li>
    </ol>
    <ol>
      <li><%= f.label :email, "#{t('your_email')}" %></li>
      <li><%= f.text_field :email, required: true, class: 'grey' %></li>
    </ol>
    <ol>
      <li>
        <%= f.label :message, "#{t('your_message')}" %>
        <%= f.text_area :message,as: :text, required: true, cols: 70, rows: 3, class: 'grey' %>
      </li>
    </ol>
    <div class= "hidden">
      <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      </br>
      <%= f.submit %>
    </div>
  <% end %>

<div id="coordinates">
    <p>LUCIEN COLLARD </p>
    <p> <%= t('address')%></p>
    <p> <%= t('tel')%></p>
  </div>

</div>